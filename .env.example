# Example environment variables for Customer Pain Point Discovery Agent
# Copy this file to `.env` and fill in real secret values before running the app.

#############################
# API Credentials / Keys
#############################
# OpenAI API key used for LLM requests
OPENAI_API_KEY=

# Reddit API credentials (PRAW)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
# Optional: custom user agent for Reddit requests
REDDIT_USER_AGENT=customer-pain-point-agent/0.1

# Google Custom Search credentials (if using Google Search tool)
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Optional: reserved for future Twitter ingestion
TWITTER_BEARER_TOKEN=

#############################
# Runtime / Tuning Defaults
#############################
# Tool flags (true/false)
TOOL_REDDIT_ENABLED=true
TOOL_GOOGLE_SEARCH_ENABLED=true

# How many results to request per source (integer)
MAX_RESULTS_PER_SOURCE=10

# Timeout values (seconds)
SOURCE_TIMEOUT_SECONDS=30
TOTAL_TIMEOUT_SECONDS=120

# Enable simple caching to reduce API usage (true/false)
CACHE_ENABLED=true

# Aggregation weights (tune cross-source scoring)
AGGREGATION_RECENCY_WEIGHT=0.55
AGGREGATION_ENGAGEMENT_WEIGHT=0.45
AGGREGATION_MAX_ITEM_AGE_DAYS=365
AGGREGATION_NEAR_DUPLICATE_THRESHOLD=0.82
# Weight applied to comments relative to upvotes in engagement calculation.
# Default 0.5 means 1 comment = 0.5 upvotes. Adjust based on platform norms.
AGGREGATION_COMMENT_WEIGHT=0.5
AGGREGATION_REDDIT_WEIGHT=1.0
AGGREGATION_GOOGLE_WEIGHT=0.9
AGGREGATION_DEFAULT_WEIGHT=0.75

#############################
# Budget / Safety Limits
#############################
# Budget guidance used by the app (USD)
OPENAI_BUDGET_USD=15
TOTAL_BUDGET_USD=20

#############################
# UI / Production Gating
#############################
# Production defaults hide debug-only panels. Set `UI_PRODUCTION_MODE=false` for local development.
UI_PRODUCTION_MODE=true
SHOW_DEBUG_PANEL=false

# Notes:
# - Keep this file out of version control (`.env` should be added to .gitignore).
# - Replace empty values with real credentials and sensitive values only in your local `.env` file.
# - For CI/CD or deployment, use your platform's secret management instead of committing secrets.
